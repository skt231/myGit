  <select id="listSearch" resultType="com.drug.dto.QnaDto">
<![CDATA[select * from(select rownum rn,a.* from(
select qna_board.* from qna_board where 1=1]]>
<!-- <include refid="search"></include> -->
<![CDATA[order by bno desc) a where rownum<=#{page} * #{perPageNum}) b where rn>(#{page}-1) * #{perPageNum}]]>
</select>

 <select id="listSearchCount" resultType="int">
<![CDATA[select count(bno) from qna_board where 1=1]]>
