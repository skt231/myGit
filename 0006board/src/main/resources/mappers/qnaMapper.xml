<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.drug.dao.QnaDao">
 <insert id="create">
	insert into qna_board
	values(#{title},#{content},#{writer},sysdate,0,bno.nextval)
</insert>

<select id="read" resultType="com.drug.dto.QnaDto">
select * from qna_board where bno=#{bno}
</select>

<update id="update">
update qna_board set title =#{title}, content=#{content}
where bno=#{bno}
</update>

<delete id="delete">
delete from qna_board where bno=#{bno}
</delete>

