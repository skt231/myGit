<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.human.dao.IPocketDao">
<insert id="insert">
insert into pocket values(#{name},#{knife},#{pencil},#{ballpen})
</insert>
<select id="select" resultType="com.human.dto.PocketDto">
select * from pocket where name=#{name}
</select>
<select id="selectAll" resultType="com.human.dto.PocketDto">
select * from pocket order by id
</select>
<delete id="delete">
delete from pocket where id=#{id}
</delete>
<update id="update">
update pokcet set knife=#{knife},pencil=#{pencil},ballpen=#{ballpen} where name=#{name}
</update>

</mapper>