<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.human.dao.ICustomerDao">
<insert id="insert">
insert into customer
values(id_counter.nextval,#{name},#{height},#{birthday})
</insert>
<select id="select" resultType="com.human.dto.CustomerDto">
select * from customer where id=#{id}
</select>
<select id="selectAll" resultType="com.human.dto.CustomerDto">
 select *  from customer order by id
</select>

<delete id="delete">
delete from customer where id=#{id}
</delete>
<update id="update">
update customer set name=#{name},height,birthday=#{birthday} where id=#{id}
</update>

<select id="selectMaxId" resultType="com.human.dto.CustomerHobbyVo2">
select customer.id,name,height,birthday,hobby from customer,hobby 
where customer.id=hobby.id
</select>
</mapper>