<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.human.dao.IHobbyDao">
<insert id="insert">
insert into hobby
values(id_counter.nextval,#{hobby})
</insert>
<select id="select" resultType="com.human.dto.HobbyDto">
select * from hobby where id=#{id}
</select>
<select id="selectAll" resultType="com.human.dto.HobbyDto">
select * from hobby order by id
</select>

<delete id="delete">
delete from hobby where id=#{id}
</delete>
<update id="update">
update hobby set hobby=#{hobby} where id=#{id}
</update>

<select id="insertItem" resultType="Integer">
select id from hobby order by id
</select>

</mapper>
